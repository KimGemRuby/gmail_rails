<p class="h1"><%= email.object %></p>
<p class=""><%= email.body %></p>
<div class="d-flex justify-content-center">
  <%= link_to "Delete", email_path(email), method: :delete, remote: true, class:"btn btn-sm btn-danger mx-1" %>

  <% if email.read %>
    <%= render "button", destination: email_unread_path(email), title: "Unread" %>
  <% end %>
</div>